{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-sparse-arrays": "off"
    },
    "globals": {
        "chrome": true,
        "browser": true,
        "window": true,
        "document": true,
        "navigator": true
    }
}